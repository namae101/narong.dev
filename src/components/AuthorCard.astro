---
import Link from '@/components/Link.astro'
import AvatarComponent from '@/components/ui/avatar'
import { cn } from '@/lib/utils'
import type { SocialLink } from '@/types'
import type { CollectionEntry } from 'astro:content'
import SocialIcons from './SocialIcons.astro'

interface Props {
  about: CollectionEntry<'about'>
}

const { about } = Astro.props
const { name, avatar, bio, pronouns } = about.data
const currentPath = Astro.url.pathname
const isAuthorPage = currentPath === `/authors/${about.id}`

const socialLinks: SocialLink[] = [
  about.data.website && { href: about.data.website, label: 'Website' },
  about.data.github && { href: about.data.github, label: 'GitHub' },
  about.data.twitter && { href: about.data.twitter, label: 'Twitter' },
  about.data.linkedin && { href: about.data.linkedin, label: 'LinkedIn' },
  about.data.mail && { href: `mailto:${about.data.mail}`, label: 'Email' },
].filter(Boolean) as SocialLink[]
---

<div
  class="has-[a:hover]:bg-secondary/50 overflow-hidden rounded-xl border p-4 transition-colors duration-300 ease-in-out"
>
  <div class="flex flex-row gap-4">
    <Link
      href={`/authors/${about.id}`}
      class={cn('block', isAuthorPage && 'pointer-events-none')}
    >
      <AvatarComponent
        client:load
        src={avatar}
        alt={`Avatar of ${name}`}
        fallback={name[0]}
        className={cn(
          'size-64 rounded-md [&>[data-slot="avatar-fallback"]]:rounded-md',
          !isAuthorPage &&
            'hover:ring-primary transition-shadow duration-300 hover:cursor-pointer hover:ring-2',
        )}
      />
    </Link>
    <div class="flex grow flex-col justify-between gap-y-4">
      <div>
        <div class="flex flex-wrap items-center gap-x-2">
          <h3 class="text-lg font-medium">{name}</h3>
          {
            pronouns && (
              <span class="text-muted-foreground text-sm">({pronouns})</span>
            )
          }
        </div>
        <p class="text-muted-foreground text-sm">{bio}</p>
      </div>
      <SocialIcons links={socialLinks} />
    </div>
  </div>
</div>
